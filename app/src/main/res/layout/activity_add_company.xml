<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_add_item">

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar_add_company"
            layout="@layout/toolbar_common"
            android:visibility="visible" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/card_add_party"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/iv_company_logo"
                                android:layout_width="70dp"
                                android:layout_height="70dp" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">
                                <EditText
                                    android:imeOptions="actionNext"
                                    android:textSize="16dp"
                                    android:gravity="top"
                                    android:text=""
                                    android:inputType="textCapWords"
                                    android:singleLine="true"
                                    android:id="@+id/et_company_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Business Name" />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <EditText
                                android:imeOptions="actionNext"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:text=""
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:id="@+id/et_company_contact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Contact Number" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <EditText
                                android:imeOptions="actionNext"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:text=""
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:id="@+id/et_company_gstin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="GSTIN Number (optional)" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <EditText
                                android:imeOptions="actionNext"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:text=""
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:id="@+id/et_company_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email Id" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <EditText
                                android:imeOptions="actionNext"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:text=""
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:id="@+id/et_company_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Business Address" />
                        </android.support.design.widget.TextInputLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:background="@android:color/holo_red_dark" />


                            <Spinner
                                android:id="@+id/sp_state"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <EditText
                                android:imeOptions="actionNext"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:text=""
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:id="@+id/et_company_invoice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Invoice prefix (optional)" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">
                            <EditText
                                android:imeOptions="actionNext"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:text=""
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:id="@+id/et_company_payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Payment in prefix (optional)" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <EditText
                                android:imeOptions="actionNext"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:text=""
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:id="@+id/et_company_bank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Bank Name" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <EditText
                                android:imeOptions="actionNext"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:text=""
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:id="@+id/et_company_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Account Number" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <EditText
                                android:imeOptions="actionNext"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:text=""
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:id="@+id/et_company_ifsc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="IFSC Code" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/btn_delete_company"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF1DA1FF"
            android:text="Delete"
            android:textColor="#fff" />

        <Button
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/btn_edit_company"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/commonblue"
            android:text="Edit"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_clear_company"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF1DA1FF"
            android:text="RESET"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_save_company"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="SAVE"
            android:textColor="#fff" />
    </LinearLayout>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/pb_add_product"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</android.support.design.widget.CoordinatorLayout>
