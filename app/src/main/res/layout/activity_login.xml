<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_main"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mainlogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="User Login"
                android:textColor="@android:color/white"
                android:textSize="40dp" />

            <EditText

                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_rounded_accent"
                android:drawableLeft="@mipmap/person"
                android:hint="Username"
                android:padding="5dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_rounded_accent"
                android:drawableLeft="@mipmap/lock"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="#000000" />

            <EditText
                android:visibility="gone"
                android:id="@+id/et_select_company"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_rounded_accent"
                android:drawableLeft="@mipmap/groups"
                android:drawableRight="@mipmap/down"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Company Type"
                android:longClickable="false"
                android:padding="5dp"
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:textAllCaps="false"
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_rounded_accents"
                    android:padding="5dp"
                    android:text="Log In"
                    android:textColor="@android:color/white" />


            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_new_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Click Here To New User"
                android:textColor="#000"
                android:textSize="17dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
