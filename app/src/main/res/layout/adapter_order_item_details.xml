<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="05dp"
    android:background="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="05dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_order_item_name"
                android:textColor="@color/colorPrimary"
                android:text="Product Name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_order_item_price"
                android:gravity="right"
                android:textColor="@color/colorPrimary"
                android:text="Product Price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="05dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:text="Item Subtotal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_order_item_details"
                android:textSize="13dp"
                android:gravity="right"
                android:text="Product Price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="13dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tv_order_item_subtotal"
                android:gravity="right"
                android:text="Product Price"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="05dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:text="Discount(%): "
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_order_item_discount"
                android:gravity="left"
                android:textSize="13dp"
                android:text="0.0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_order_item_discount_amount"
                android:layout_weight="2"
                android:gravity="right"
                android:textSize="13dp"
                android:text="Discount Amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="05dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:text="Tax Exempted: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_order_item_tax"
                android:gravity="left"
                android:textSize="13dp"
                android:text="0.0 "
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="left"
                android:textSize="13dp"
                android:text="%"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_order_item_tax_amount"
                android:layout_weight="2"
                android:gravity="right"
                android:textSize="13dp"
                android:text="Tax Amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>