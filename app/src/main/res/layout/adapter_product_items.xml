<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/activity_background_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="2.0dip"
        app:cardElevation="2.0dip"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="02dp"
        android:layout_marginRight="02dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="05dp"
                android:layout_marginLeft="05dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_margin="03dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <View
                        android:visibility="gone"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_red_dark" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/spacing_large"
                        android:paddingRight="@dimen/spacing_large">

                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/tv_product_name_adapter"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="New Goods"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15dp" />

                        <TextView

                            android:id="@+id/tv_product_category_adapter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end|center_vertical"
                            android:text="General"
                            android:textSize="15dp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_xsmall"
                    android:layout_marginBottom="@dimen/spacing_xsmall"
                    android:background="@color/colorPrimary" />

                <android.support.v7.widget.CardView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xsmall"
                    android:layout_marginRight="@dimen/spacing_xsmall"
                    android:layout_marginBottom="@dimen/spacing_xsmall"
                    android:layout_weight="1.0"
                    android:visibility="visible"
                    app:cardCornerRadius="2.0dip"
                    app:cardElevation="2.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="03dp">


                        <LinearLayout
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center|left"
                                android:layout_weight="1.0"
                                android:text="Stock Quantity"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="#8d9cae" />

                            <TextView
                                android:id="@+id/tv_product_stock_qty"
                                android:layout_marginTop="05dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center|left"
                                android:text="-9.0"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                android:textColor="#000" />

                            <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center|left"
                                android:layout_weight="1.0"
                                android:text="Stock Value"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="#8d9cae" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_marginTop="05dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <ImageView
                                    android:layout_marginRight="05dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/one_rupee"
                                    android:layout_width="10dp"
                                    android:layout_height="20dp" />
                                <TextView
                                    android:id="@+id/tv_product_stock_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="रे 0.00"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="#000" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="0.0dip" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_xsmall"
                    android:layout_marginBottom="@dimen/spacing_xsmall"
                    android:background="@android:color/holo_red_dark" />

                <android.support.v7.widget.CardView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_xsmall"
                    android:layout_marginRight="@dimen/spacing_xsmall"
                    android:layout_marginBottom="@dimen/spacing_xsmall"
                    android:layout_weight="1.0"
                    android:visibility="visible"
                    app:cardCornerRadius="2.0dip"
                    app:cardElevation="2.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="03dp">

                        <LinearLayout
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center|left"
                                android:layout_weight="1"
                                android:text="Sale Price"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="#8d9cae"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_marginTop="05dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <ImageView
                                    android:layout_marginRight="05dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/one_rupee"
                                    android:layout_width="10dp"
                                    android:layout_height="20dp" />
                                <TextView
                                    android:id="@+id/tv_product_sale_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center|left"
                                    android:text="रे 0.00"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="#000" />
                            </LinearLayout>

                            <TextView
                                android:textSize="16dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center|left"
                                android:layout_weight="1.0"
                                android:text="Purchase Price"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="#8d9cae"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_marginTop="05dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <ImageView
                                    android:layout_marginRight="05dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/one_rupee"
                                    android:layout_width="10dp"
                                    android:layout_height="20dp" />
                                <TextView
                                    android:id="@+id/tv_product_purchase_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="रे 0.00"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="#000" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout

                android:visibility="visible"
                android:layout_marginRight="05dp"
                android:layout_marginLeft="05dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_margin="03dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <View
                        android:visibility="gone"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_red_dark" />

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:padding="05dp"
                            android:layout_marginRight="15dp"
                            android:gravity="right|center_vertical"
                            android:src="@mipmap/edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textColor="@color/colorPrimary"
                            />

                        <ImageView
                            android:padding="07dp"
                            android:layout_marginRight="05dp"
                            android:src="@drawable/product_controls_o"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="end" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>






</LinearLayout>