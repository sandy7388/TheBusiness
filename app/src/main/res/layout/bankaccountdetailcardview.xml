<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8.0sp"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="8.0sp"
        android:layout_marginBottom="10.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bank_detail_card_view_date"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:text="@string/dummy_plain_text"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/bank_detail_card_view_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center|left"
            android:layout_weight="1.0"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/dummy_plain_text"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/bank_detail_card_view_description"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center|left"
            android:layout_weight="1.0"
            android:gravity="left"
            android:paddingLeft="5.0dip"
            android:singleLine="true"
            android:text="@string/dummy_plain_text"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/bank_detail_card_view_amount"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center|right"
            android:layout_weight="1.0"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/dummy_plain_text"
            android:textSize="14.0sp" />
    </LinearLayout>
</LinearLayout>