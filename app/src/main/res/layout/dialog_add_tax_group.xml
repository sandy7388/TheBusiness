<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ll_route"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Add Tax Group"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <EditText
                        android:inputType="textCapWords"
                        android:id="@+id/et_add_tax_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="Tax Group Name"
                        android:singleLine="true"
                        android:text="" />

                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_tax_rate_group"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingRight="10dp"
        android:gravity="right"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/btn_cancel_tax_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleX="0.9"
            android:scaleY="0.8"
            android:text="Cancel"
            android:gravity="center"
            android:textAllCaps="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btn_add_tax_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="Add"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="18dp"
            android:visibility="visible"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>