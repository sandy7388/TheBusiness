<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_route"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Add New Route"
            android:textSize="20dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="15dp">

            <EditText
                android:inputType="textCapWords"
                android:id="@+id/et_add_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Route Name"
                android:singleLine="true"
                android:text="" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btn_delete_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleX="0.9"
                android:scaleY="0.8"
                android:text="Delete"
                android:gravity="center"
                android:textAllCaps="true"
                android:visibility="gone" />

            <TextView
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleX="0.9"
                android:scaleY="0.8"
                android:text="Cancel"
                android:gravity="center"
                android:textAllCaps="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:text="save"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="18dp"
                android:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_trip"
        android:visibility="visible"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Add New Trip"
            android:textSize="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="18dp"
                android:background="@android:color/holo_red_dark" />


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/sp_new_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="15dp">

            <EditText
                android:inputType="textCapWords"
                android:id="@+id/et_add_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Trip Name"
                android:singleLine="true"
                android:text="" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btn_delete_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleX="0.9"
                android:scaleY="0.8"
                android:text="delete"
                android:gravity="center"
                android:textAllCaps="true"
                android:visibility="gone" />

            <TextView
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btn_cancel_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleX="0.9"
                android:scaleY="0.8"
                android:text="Cancel"
                android:gravity="center"
                android:textAllCaps="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_add_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:text="save"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="18dp"
                android:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>